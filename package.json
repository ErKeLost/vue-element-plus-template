{
  "name": "vue3-template",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "dev:open": "vite --port 3333 --open",
    "preview": "vite preview",
    "typecheck": "vue-tsc --noEmit",
    "prettier": "prettier --write .",
    "lint": "pnpm lint:script",
    "lint:script": "eslint --ext .js,.jsx,.ts,.tsx --fix --quiet ./",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install",
    "commit": "cz",
    "prepare": "husky install",
    "vite:force": "npx vite --force",
    "build:testa": "vue-tsc --noEmit && vite build --mode testa",
    "build:testb": "vue-tsc --noEmit && vite build --mode testb"
  },
  "dependencies": {
    "@erkelost/axios-ext": "^1.0.5",
    "@erkelost/colorpicker": "^1.0.6",
    "@erkelost/layout": "^2.3.9",
    "@erkelost/utils": "^1.0.2",
    "@vueuse/core": "^8.2.5",
    "animate.css": "^4.1.1",
    "axios": "^0.27.2",
    "css-color-function": "^1.3.3",
    "dayjs": "^1.11.0",
    "echarts": "^5.3.2",
    "element-plus": "2.1.8",
    "lodash-es": "^4.17.21",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.13",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@iconify/json": "^2.1.26",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^17.0.23",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "@unocss/reset": "^0.31.2",
    "@vitejs/plugin-legacy": "^1.8.0",
    "@vitejs/plugin-vue": "^2.3.0",
    "@vitejs/plugin-vue-jsx": "^1.3.9",
    "commitlint": "^16.2.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.6.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "rollup-plugin-visualizer": "^5.6.0",
    "sass": "1.50.1",
    "typescript": "^4.5.4",
    "unocss": "^0.31.0",
    "unplugin-auto-import": "^0.6.9",
    "unplugin-icons": "^0.14.1",
    "unplugin-vue-components": "^0.18.5",
    "vite": "2.9.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-eslint": "^1.3.0",
    "vite-plugin-glob": "^0.2.6",
    "vite-plugin-inspect": "^0.4.3",
    "vite-plugin-optimize-persist": "^0.1.2",
    "vite-plugin-package-config": "^0.1.1",
    "vite-plugin-pages": "^0.22.0",
    "vite-svg-loader": "^3.2.0",
    "vue-tsc": "^0.29.8"
  },
  "lint-staged": {
    "**/*.{js,jsx,tsx,ts,json}": [
      "npm run lint:script",
      "git add --force"
    ]
  },
  "vite": {
    "optimizeDeps": {
      "include": [
        "@erkelost/axios-ext",
        "@erkelost/colorpicker",
        "@erkelost/layout",
        "@erkelost/utils",
        "@vueuse/core",
        "css-color-function",
        "element-plus/es",
        "element-plus/es/components/alert/style/css",
        "element-plus/es/components/button/style/css",
        "element-plus/es/components/col/style/css",
        "element-plus/es/components/config-provider/style/css",
        "element-plus/es/components/date-picker/style/css",
        "element-plus/es/components/divider/style/css",
        "element-plus/es/components/drawer/style/css",
        "element-plus/es/components/icon/style/css",
        "element-plus/es/components/input-number/style/css",
        "element-plus/es/components/menu-item-group/style/css",
        "element-plus/es/components/menu-item/style/css",
        "element-plus/es/components/menu/style/css",
        "element-plus/es/components/message-box/style/css",
        "element-plus/es/components/option/style/css",
        "element-plus/es/components/row/style/css",
        "element-plus/es/components/select/style/css",
        "element-plus/es/components/space/style/css",
        "element-plus/es/components/sub-menu/style/css",
        "element-plus/es/components/switch/style/css",
        "element-plus/es/components/tooltip/style/css",
        "element-plus/lib/locale/lang/zh-cn",
        "pinia",
        "vue",
        "vue-router"
      ]
    }
  }
}
